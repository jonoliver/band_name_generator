cap = (string) -> string.charAt(0).toUpperCase() + string.substring(1).toLowerCase()

module.exports = {
  init: (_) ->
    _.mixin
      cap: (string) ->
        string.split(/\s+/).map((string) -> cap(string)).join(' ')
      default: (string, def_val) ->
        if (string == undefined || string == null) then def_val else string
}
